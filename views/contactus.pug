extends layout

block content
  .row
    .col-md-auto
      .border.border-secondary.rounded.p-3.bg-dark
        h1.display-1 Contact Us
        hr
        h1.display-6
          +icon("bi-discord")
          | 
          a(href="https://discord.gg/ShouldYouRide" target="_blank").btn.btn-primary.btn-lg discord.gg/ShouldYouRide
        h1.display-6
          +icon("bi-envelope")
          | 
          a(href="mailto:support@shouldyouride.com" target="_blank").btn.btn-primary.btn-lg Send us an Email
    .col-md
      .border.border-secondary.rounded.p-3.bg-dark
        h1.display-1 Feedback
        hr
        if errors
          each error in errors
            .alert.alert-danger(role="alert") #{error.msg}
        if success && success === true
          .alert.alert-success(role="alert") Thanks for the feedback! We will review it and get back to you if applicable!
        else
          form(method="POST" action="")
            .mb-3
              label(for="emailInput").form-label Email Address
              input(name="email" type="email" aria-describedby="emailHelp").form-control#emailInput
              .form-text#emailHelp We'll never share your email with anyone else.
            .mb-3
              label(for="feedbackInput").form-label Suggestions, ideas, concerns, on what we can improve on
              textarea(name="feedback" rows="10" cols="30").form-control#feedbackInput
            button(type="submit").btn.btn-success.btn-lg Submit Feedback