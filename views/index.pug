      h1.display-1 Should You <b>Ride</b>? 
        script.
          function getWeather() {
            navigator.geolocation.getCurrentPosition((success, error) => {
              console.log('tried to get location');
              if (error) console.log(error);
              if (success) {
                window.location.href = "/" + success.coords.latitude + "/" + success.coords.longitude;
              }
            });
          }
        a.btn.btn-success.btn-lg(role="button" onclick="getWeather()") Get Weather
